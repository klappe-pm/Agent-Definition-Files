# Agents Framework Environment Variables
# Copy this file to .env and add your API keys
# Only the API key for your chosen provider is required

# Choose ONE provider (uncomment the one you want to use):

# Option 1: Anthropic Claude
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Option 2: OpenAI
# OPENAI_API_KEY=your_openai_api_key_here

# Option 3: Google Gemini
# GOOGLE_API_KEY=your_google_api_key_here

# Option 4: Local models (no API key needed)
# OLLAMA_HOST=http://localhost:11434

# Optional: Override default model (if not set, uses provider default)
# DEFAULT_MODEL=claude-3-5-sonnet

# Optional: Environment (development/production)
# ENVIRONMENT=development

# Optional: Advanced features (all disabled by default)
# ENABLE_MEMORY_PERSISTENCE=false
# ENABLE_VECTOR_STORE=false
# ENABLE_MCP_SERVERS=false
# ENABLE_TELEMETRY=false
# LOG_LEVEL=INFO
