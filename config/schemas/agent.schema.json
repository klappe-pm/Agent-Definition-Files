{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Definition Schema",
  "description": "Minimal schema for agent definitions - most fields are optional",
  "type": "object",
  "required": ["name", "role"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique agent identifier"
    },
    "role": {
      "type": "string",
      "description": "Agent's primary role"
    },
    "description": {
      "type": "string",
      "description": "Optional agent description"
    },
    "model": {
      "type": "string",
      "description": "Optional preferred model override"
    },
    "responsibilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional list of responsibilities"
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional tools the agent can use"
    },
    "sub_agents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "role"],
        "properties": {
          "name": {"type": "string"},
          "role": {"type": "string"},
          "description": {"type": "string"}
        }
      },
      "description": "Optional sub-agents"
    },
    "parameters": {
      "type": "object",
      "description": "Optional runtime parameters"
    }
  }
}
