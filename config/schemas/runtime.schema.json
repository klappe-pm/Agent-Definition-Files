{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Runtime Configuration Schema",
  "description": "Schema for runtime configuration - all fields optional for quick start",
  "type": "object",
  "properties": {
    "runtime": {
      "type": "object",
      "properties": {
        "max_iterations": {
          "type": "integer",
          "minimum": 1,
          "default": 10
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1,
          "default": 300
        },
        "enable_logging": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "routing": {
      "type": "object",
      "properties": {
        "default": {
          "type": "string"
        },
        "tasks": {
          "type": "object"
        }
      }
    },
    "memory": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["memory", "file", "redis"],
          "default": "memory"
        },
        "max_items": {
          "type": "integer",
          "default": 1000
        }
      }
    },
    "tools": {
      "type": "object",
      "properties": {
        "enable_all": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "safety": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "level": {
          "type": "string",
          "enum": ["minimal", "standard", "strict"],
          "default": "standard"
        }
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR"],
          "default": "INFO"
        },
        "format": {
          "type": "string",
          "enum": ["simple", "detailed", "json"],
          "default": "simple"
        }
      }
    }
  }
}
